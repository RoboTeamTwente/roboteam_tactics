<launch>
	<group ns="blue">
		<arg name="legacy_packets" default="false" />
		<param name="use_legacy_packets" type="boolean" value="$(arg legacy_packets)" />

		<arg name="our_side_arg" default="left" />
		<arg name="our_color_arg" default="blue" />

		<param name="our_side" type="str" value="$(arg our_side_arg)" />
		<param name="our_color" type="str" value="$(arg our_color_arg)" />
	 
		<node pkg="roboteam_world" type="filtered_world" name="world"/>
		<node pkg="roboteam_vision" type="roboteam_vision" name="vision" output="screen"/>
		<node pkg="roboteam_robothub" type="roboteam_robothub" name="robothub" output="screen"/>

		<param name="role_iterations_per_second" type="int" value="30" />
	</group>

	<group ns="yellow">
		<arg name="legacy_packets" default="false" />
		<param name="use_legacy_packets" type="boolean" value="$(arg legacy_packets)" />

		<arg name="our_side_arg" default="right" />
		<arg name="our_color_arg" default="yellow" />

		<param name="our_side" type="str" value="$(arg our_side_arg)" />
		<param name="our_color" type="str" value="$(arg our_color_arg)" />
	 
		<node pkg="roboteam_world" type="filtered_world" name="world"/>
		<node pkg="roboteam_vision" type="roboteam_vision" name="vision" output="screen"/>
		<node pkg="roboteam_robothub" type="roboteam_robothub" name="robothub" output="screen" />

		<param name="role_iterations_per_second" type="int" value="30" />
	</group>
</launch>
